{
  "variables": {
    "vm_name": "centos7-oracle12c",
    "memory": "4096",
    "cpus": "2",
    "staging_dir": "/stage",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "source_path": "output-virtualbox-centos7-basebox/centos7-basebox.ovf"
  },

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "environment_vars" : [
        "STAGING_DIR={{user `staging_dir`}}"
     ],
      "scripts": [
        "scripts/oracle12c/preinstall_oracle12c.sh"
      ]
    },
    {
      "type": "file",
      "source": "scripts/oracle12c/stage/",
      "destination": "{{user `staging_dir`}}"
    },
    {
      "type": "shell",
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "environment_vars" : [
        "STAGING_DIR={{user `staging_dir`}}"
     ],
      "scripts": [
        "scripts/oracle12c/install_oracle12c.sh",
        "scripts/basebox/cleanup.sh",
        "scripts/basebox/zerodisk.sh"
      ]
    }
  ],

  "builders": [
    {
      "type": "virtualbox-ovf",
      "headless": false,
      "source_path": "{{user `source_path`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "guest_additions_mode": "disable",
      "output_directory": "output-virtualbox-{{user `vm_name`}}",
      "shutdown_command": "echo {{user `ssh_password`}} | sudo -S shutdown -P now",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "builds/{{.Provider}}-{{user `vm_name`}}.box"
    }
  ]
}
